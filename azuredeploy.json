{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "DBLogin": {
            "type": "String",
            "defaultValue": "mysqladmin"
        },
        "DBPassword": {
            "type": "SecureString",
            "defaultValue": "P2ssw0rd"
        },
        "webSiteName": {
            "type": "String"
        }
    },
    "variables": {
        "databaseName": "[concat(parameters('webSiteName'), 'database')]",
        "serverName": "[parameters('webSiteName')]",
        "hostingPlanName": "[parameters('webSiteName')]",
        "siteName": "[concat(parameters('webSiteName'),'-app-', uniquestring(resourceGroup().id))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "name": "[variables('siteName')]",
            "apiVersion": "2016-03-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "siteConfig": {
                    "connectionStrings": [
                        {
                            "name": "defaultConnection",
                            "ConnectionString": "[concat('Database=', variables('databaseName'), ';Data Source=', variables('serverName') ,'.mysql.database.azure.com;User Id=',parameters('DBLogin'),'@',variables('serverName') ,';Password=',parameters('DBPassword'))]",
                            "type": "MySQL"
                        }
                    ]
                },
                "name": "[variables('siteName')]",
                "serverFarmId": "[variables('hostingPlanName')]",
                "hostingEnvironment": ""
            },
            "resources": [
                {
                    "type": "config",
                    "name": "web",
                    "apiVersion": "2015-08-01",
                    "properties": {
                        "javaVersion": "1.8",
                        "javaContainer": "TOMCAT",
                        "javaContainerVersion": "8.0"
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', variables('siteName'))]"
                    ]
                }
            ],
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', variables('hostingPlanName'))]"
            ]
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "Tier": "Free",
                "Name": "F1"
            },
            "name": "[variables('hostingPlanName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourcegroup().location]",
            "properties": {
                "name": "[variables('hostingPlanName')]",
                "workerSizeId": "0",
                "numberOfWorkers": "1",
                "hostingEnvironment": ""
            }
        },
        {
            "type": "Microsoft.DBforMySQL/servers",
            "sku": {
                "name": "MYSQLB50",
                "tier": "Basic",
                "capacity": "50",
                "size": "51200",
                "family": "SkuFamily"
            },
            "name": "[variables('serverName')]",
            "apiVersion": "2016-02-01-privatepreview",
            "location": "[resourceGroup().location]",
            "properties": {
                "version": "5.7",
                "administratorLogin": "[parameters('DBLogin')]",
                "administratorLoginPassword": "[parameters('DBPassword')]",
                "storageMB": "51200",
                "sslEnforcement": "Disabled"
            },
            "resources": [
                {
                    "type": "firewallrules",
                    "name": "AllowAll",
                    "apiVersion": "2016-02-01-privatepreview",
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "255.255.255.255"
                    },
                    "dependsOn": [
                        "[concat('Microsoft.DBforMySQL/servers/', variables('serverName'), '/databases/' , variables('databaseName'))]",
                        "[concat('Microsoft.DBforMySQL/servers/', variables('serverName'))]"
                    ]
                },
                {
                    "type": "databases",
                    "name": "[variables('databaseName')]",
                    "apiVersion": "2016-02-01-privatepreview",
                    "properties": {
                        "charset": "utf8",
                        "collation": "utf8_general_ci"
                    },
                    "dependsOn": [
                        "[concat('Microsoft.DBforMySQL/servers/', variables('serverName'))]"
                    ]
                }
            ]
        }
    ]
}
