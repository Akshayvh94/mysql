{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webSiteName": {
            "type": "String",
            "metadata": {
                "description": "Name of Azure WebApp"
            }
        },
        "DBLogin": {
            "minLength": 1,
            "type": "String",
            "metadata": {
                "description": "Database login name"
            }
        },
        "DBPassword": {
            "minLength": 8,
            "maxLength": 128,
            "type": "SecureString",
            "metadata": {
                "description": "Database password"
            }
        }
    },
    "variables": {
        "databaseName": "[concat(parameters('webSiteName'), 'database')]",
        "serverName": "[parameters('webSiteName')]",
        "hostingPlanName": "[parameters('webSiteName')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "Tier": "Standard",
                "Name": "S1"
            },
            "name": "[variables('hostingPlanName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[variables('hostingPlanName')]",
                "workerSizeId": "1",
                "reserved": true,
                "numberOfWorkers": 0,
                "hostingEnvironment": ""
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "name": "[parameters('webSiteName')]",
            "apiVersion": "2016-03-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[parameters('webSiteName')]",
                "serverFarmId": "[variables('hostingPlanName')]",
                "hostingEnvironment": ""
            },
            "resources": [
                {
                    "type": "config",
                    "name": "connectionstrings",
                    "apiVersion": "2015-04-01",
                    "properties": {
                        "defaultConnection": {
                            "value": "[concat('Database=', variables('databaseName'), ';Data Source=', variables('serverName'), '.mysql.database.azure.com;User Id=', parameters('DBLogin'),'@', variables('serverName'),';Password=', parameters('DBPassword'))]",
                            "type": "MySQL"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('webSiteName'))]"
                    ]
                }
            ],
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', variables('hostingPlanName'))]"
            ]
        },
        {
            "type": "Microsoft.DBforMySQL/servers",
            "kind": "",
            "name": "[variables('serverName')]",
            "apiVersion": "2016-02-01-privatepreview",
            "location": "[resourceGroup().location]",
            "properties": {
                "version": "5.7",
                "administratorLogin": "[parameters('DBLogin')]",
                "administratorLoginPassword": "[parameters('DBPassword')]",
                "storageMB": "51200"
            },
            "resources": [
                {
                    "type": "firewallrules",
                    "name": "[concat(variables('serverName'),'firewall')]",
                    "apiVersion": "2016-02-01-privatepreview",
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "255.255.255.255"
                    },
                    "dependsOn": [
                        "[concat('Microsoft.DBforMySQL/servers/', variables('serverName'))]"
                    ]
                },
                {
                    "type": "databases",
                    "name": "[variables('databaseName')]",
                    "apiVersion": "2016-02-01-privatepreview",
                    "properties": {
                        "charset": "utf8",
                        "collation": "utf8_general_ci"
                    },
                    "dependsOn": [
                        "[concat('Microsoft.DBforMySQL/servers/', variables('serverName'))]"
                    ]
                }
            ]
        }
    ]
}
